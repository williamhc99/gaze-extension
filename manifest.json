{
    "name": "Gaze",
    "version": "1.0",
    "description": "Decluster your space",
    "manifest_version": 2,

    "browser_action": {
        "default_popup": "flappy/index.html"
    },

    "chrome_url_overrides": {
    	"newtab": "popup/index.html"
    },

    "permissions": ["activeTab"],

    "icons": {
        "64" : "logo64.png",
        "128" : "logo128.png",
        "256" : "logo256.png"
    }
}